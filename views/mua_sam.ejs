<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.5/pagination.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container-fluid border">
    <div class="col-12 header-page">
        <!-- Image and text -->
        <%- include('layouts/header')%>

        <hr class="" style="border:2px solid black;">
    </div>
    <div class="col-12">
        <nav class="col-12 navbar navbar-light text-center">
            <div class="row col-12">
                <div class="col-12 col-md-4">
                    <a href="/" class="btn btn-success text-uppercase" style="border-radius:20px; color: #f2fc04;">Trang chủ</a> >>
                    <a href="location?name=<%= data.city %>"><%= data.city.replace(/_/gi, " ")%></a> >> Mua sắm
                </div>
                <div class="col-12 col-md-4">
                    <form action="/search">
                        <div class="col-12 col-md-12 form-group has-search">
                            <span class="fa fa-search form-control-feedback"></span>
                            <input type="text" class="form-control" name="keyword" placeholder="Search" style="border-radius: 20px; border: 2px solid black;">
                        </div>
                    </form>
                </div>
                <div class="col-12 col-md-4">
                    <h3>Du lịch: <%= data.city.replace(/_/gi, " ") %></h3>
                </div>
            </div>
        </nav>
    </div>
    <div class="col-12 col-md-12">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8">
                <form action="" method="get" id="filterMuasamForm">
                    <div class="form-row">
                        <input type="text" name="city" value="<%= data.city %>" hidden>
                        <div class="form-group col-md-3">
                            <label for="">Loại mua sắm</label>
                            <select id="" name="loai_an_uong" class="form-control">
                                <% data.loai_hinh_an_uong.forEach(item => { %>
                                    <option value="<%= item.subject.value.split('#')[1] %>"><%= item.subject.value.split('#')[1].replace(/_/gi, " ") %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="">Khu vực</label>
                            <select id="" name="khu_vuc" class="form-control">
                                <% data.listKhuVuc.forEach(item => { %>
                                    <option value="<%= item.subject.value.split('#')[1] %>"><%= item.subject.value.split('#')[1].replace(/_/gi, " ") %></option>
                                <% }) %>
                            </select>
                        </div>
                        <% if (data.listOGan.length > 0) { %>
                            <div class="form-group col-md-3">
                                <label for="">Ở gần</label>
                                <select id="" name="o_gan" class="form-control">
                                    <option value="">Tất cả</option>
                                    <% data.listOGan.forEach(item => { %>
                                        <option value="<%= item.subject.value.split('#')[1] %>"><%= item.subject.value.split('#')[1].replace(/_/gi, " ") %></option>
                                    <% }) %>
                                </select>
                            </div>
                        <% } %>
                        <div class="form-group col-md-2">
                            <label for=""></label>
                            <button type="submit" class="btn btn-primary form-control mt-2" >Lọc</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-8">
                <div id="result-filter-destination"></div>
                <div id="data-container"></div>
                <div id="pagination-container"></div>
            </div>
        </div>
    </div>
    <%- include('layouts/footer')%>
</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
<script src="https://pagination.js.org/dist/2.1.5/pagination.min.js"></script>
<script src="js/my.js"></script>
</body>
</html>
